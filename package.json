{
  "name": "vue3-ts-mobie-original",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "cm": "cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "prepare": "husky install",
    "eslint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx",
    "eslint-fix": "eslint . --ext .vue,.js,.ts,.jsx,.tsx --fix",
    "stylelint": "stylelint \"./**/*.{css,scss,vue,html}\"",
    "stylelint-fix": "stylelint \"./**/*.{css,scss,vue,html}\" --fix",
    "prettier": "prettier --write './**/*.{html,vue,ts,js,cjs,tsx,jsx,json,md}'",
    "format": "pnpm eslint-fix && pnpm stylelint-fix && pnpm prettier"
  },
  "husky": {
    "hooks": {
      "prepare-pre-commit": "exec < /dev/tty && npx cz --hook || true"
    }
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.{css,scss,vue,html}": [
      "stylelint --fix"
    ],
    "*.{html,vue,ts,js,cjs,tsx,jsx,json,md}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.6.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "conventional-changelog-cli": "^4.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-vue": "^9.17.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "postcss": "^8.4.29",
    "postcss-html": "^1.5.0",
    "postcss-px-to-viewport": "^1.1.1",
    "postcss-scss": "^4.0.8",
    "prettier": "^3.0.3",
    "sass": "^1.66.1",
    "stylelint": "^15.10.3",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard-scss": "^11.0.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "stylelint-order": "^6.0.3",
    "typescript": "^5.2.2",
    "vite": "^4.4.5",
    "vue-tsc": "^1.8.5"
  }
}
